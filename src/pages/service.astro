---
// Components
// - Layout
import Layout from '../layouts/Layout.astro'
// - UI
import Hero from '../components/blocks/hero/PageHeader.astro'
import SimpleFeed from '../components/blocks/feeds/BasicFeed.astro'
import CTA from '../components/blocks/CTA/BasicDark.astro'
import Testimonial from '../components/blocks/testimonials/BasicDark.astro'
// - Testimonial background
import testimonialBackground from '../assets/testimonial-bg.webp'

// Data
import servicesData from '../data/json-files/servicesData.json'

// Content
// - SEO
const SEO = {
	title: '留学服务与全流程规划 | 予果予实（EDUGROW）',
	description:
		'予果予实（EDUGROW）提供从前期规划、院校申请、文书指导到签证办理、海外适应的全流程留学服务，专业顾问团队一对一定制方案，覆盖美英澳加新港等主流留学国家，确保学子顺利实现留学梦想。',
}
// - Page Header
const header = {
	title: '全流程留学规划与成长陪伴',
	text: '予果予实（EDUGROW）三位资深顾问团队，陪伴你从留学规划到境外发展每一步，用心助力全球升学梦想实现！'
}
---

<Layout title={SEO.title} description={SEO.description}>
	<Hero title={header.title} text={header.text} />
	<SimpleFeed data={servicesData as unknown as {
		title: string;
		stage?: string;
		text: string;
		image?: string;
		services?: string[];
	}[]} />
	<Testimonial bg={testimonialBackground} bgPosition="right" blockquote="予果予实的老师不仅专业，更像朋友一样陪伴我整个申请过程，让我收获了成长与自信。" figcaption="王同学" cite="2023年美国本科录取学员" />
	<CTA />
</Layout>
