---
// Components
// - Layout
import Layout from '../layouts/Layout.astro'
// - UI
import Hero from '../components/blocks/hero/PageHeader.astro'
import CTA from '../components/blocks/CTA/BasicDark.astro'
import CompanyIntroSection from '../components/blocks/about/CompanyIntroSection.astro'
import FoundersSection from '../components/blocks/about/FoundersSection.astro'

// Content
// - SEO
const SEO = {
	title: '关于我们 | 予果予实（EDUGROW）',
	description:
		'予果予实（EDUGROW）由三位拥有丰富教育背景的资深留学顾问创立，专注于提供个性化留学规划与全程成长陪伴服务，助力中国学子实现全球名校梦想。',
}
// - Page Header
const header = {
	title: '关于我们',
	text: '如需咨询、预约服务或了解更多信息，欢迎随时与我们取得联系。三位资深顾问将为你提供一对一专业解答。'
}
---

<Layout title={SEO.title} description={SEO.description}>
	<Hero title={header.title} text={header.text} />
	<CompanyIntroSection />
	<FoundersSection />
	<CTA />
</Layout>
