import CompanyIntroSection from '../components/blocks/about/CompanyIntroSection.astro'
import FoundersSection from '../components/blocks/about/FoundersSection.astro'

// Content
// - SEO
const SEO = {
	title: '予果予实（EDUGROW）｜关于我们',
	description:
