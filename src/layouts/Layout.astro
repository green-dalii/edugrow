---
// Imports
// Components
import NavigationBar from '../components/ui/NavigationBar.astro'
import Main from '../components/ui/Main.astro'
import Footer from '../components/ui/Footer.astro'
import Modal from '../components/blocks/modal/ContactModal.astro'
import Header from '../components/blocks/head/Header.astro'
// Scripts
import Scriprs from '../components/scripts/LocalScripts.astro'
// Styles
import '../styles/global.css'
// Fonts - 延迟加载
import '@fontsource-variable/inter'
import '@fontsource-variable/outfit'
// Data
import { configData } from '../config/config'

// Props
type Props = {
	title?: string
	description?: string
	ogImage?: string
	noindex?: boolean
}
// Page Metadata
const { title, description, ogImage, noindex } = Astro.props
---

<!doctype html>
<html lang="zh" class="scroll-animation mode-auto">
	<Header title={title} description={description} ogImage={ogImage} noindex={noindex} />
	<!-- 预加载主要CSS文件 -->
	<link rel="preload" href="/src/styles/global.css" as="style" />
	<!-- 预加载首屏图片 -->
	<link rel="preload" href="/src/assets/hero-01.webp" as="image" fetchpriority="high" />
	<body
		class:list={[
			{ ['mode-' + `${configData.mode}`]: configData.mode },
			{ ['scroll-animation']: configData.scrollAnimations }
		]}
	>
		<NavigationBar />
		<Main>
			<slot />
		</Main>
		<Footer />
		<Modal />
		<Scriprs />
	</body>
</html>
