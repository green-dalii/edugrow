---
// Feature Card
// ------------
// Description: The Card for presenting a feature
// Properties:
// - Title: the title of the card
// - Subtitle: the subtitle of the card
// - Image: the main image of the card
// - Link: The link to the blog post
// Reference: https://wind-ui.com/components/cards/

// Components
// - UI
import Card from './BasicCard.astro'

// Props
type Props = {
	title?: string
	subtitle?: string
	image?: any
	link?: string
	classes?: string
}
const { title, subtitle, image, link, classes } = Astro.props
---

<Card
	title={title}
	subtitle={subtitle}
	titleSize="xl"
	link={link}
	image={image}
	type="image-bottom"
	classes={`bg-gradient-to-t from-primary-200 to-primary-50 hover:bg-gradient-to-t hover:from-primary-200 hover:to-white dark:bg-gradient-to-t dark:from-neutral-950 dark:to-neutral-900 hover:dark:bg-gradient-to-t hover:dark:from-neutral-900 hover:dark:to-neutral-800 !shadow-none hover:!shadow-lg h-full justify-between border border-neutral-100 dark:border-neutral-800 !transition-all !duration-300 !ease-out !transform !translate-y-0 !scale-100 hover:!-translate-y-2 hover:!scale-[1.02] ${classes || ''}`}
/>
