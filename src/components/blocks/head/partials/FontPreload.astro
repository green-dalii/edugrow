---
// Font Preload Component
// ------------
// Description: A component to preload critical fonts
---

<Fragment>
  <!-- DNS预连接和预取 -->
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  
  <!-- 预加载关键字体 -->
  <link
    rel="preload"
    href="/@fontsource-variable/inter/files/inter-latin-wght-normal.woff2"
    as="font"
    type="font/woff2"
    crossorigin="anonymous"
  />
  <link
    rel="preload"
    href="/@fontsource-variable/outfit/files/outfit-latin-wght-normal.woff2"
    as="font"
    type="font/woff2"
    crossorigin="anonymous"
  />
  
  <!-- 字体优化样式 -->
  <style>
    /* 使用系统字体作为后备，减少布局偏移 */
    @font-face {
      font-family: 'Inter Variable Fallback';
      font-style: normal;
      font-weight: 100 900;
      src: local('Arial');
      size-adjust: 105%;
      ascent-override: 90%;
      descent-override: 25%;
      line-gap-override: normal;
    }
    
    @font-face {
      font-family: 'Outfit Variable Fallback';
      font-style: normal;
      font-weight: 100 900;
      src: local('Arial');
      size-adjust: 107%;
      ascent-override: 92%;
      descent-override: 22%;
      line-gap-override: normal;
    }
    
    /* 自定义字体加载策略 */
    @font-face {
      font-family: 'Inter Variable';
      font-style: normal;
      font-weight: 100 900;
      font-display: swap; /* 使用swap策略，确保文本尽快显示 */
      src: url('/@fontsource-variable/inter/files/inter-latin-wght-normal.woff2') format('woff2');
      unicode-range: U+0000-00FF, U+0131, U+0152-0153, U+02BB-02BC, U+02C6, U+02DA, U+02DC, U+2000-206F, U+2074, U+20AC, U+2122, U+2191, U+2193, U+2212, U+2215, U+FEFF, U+FFFD;
    }
    
    @font-face {
      font-family: 'Outfit Variable';
      font-style: normal;
      font-weight: 100 900;
      font-display: swap; /* 使用swap策略，确保文本尽快显示 */
      src: url('/@fontsource-variable/outfit/files/outfit-latin-wght-normal.woff2') format('woff2');
      unicode-range: U+0000-00FF, U+0131, U+0152-0153, U+02BB-02BC, U+02C6, U+02DA, U+02DC, U+2000-206F, U+2074, U+20AC, U+2122, U+2191, U+2193, U+2212, U+2215, U+FEFF, U+FFFD;
    }
  </style>
</Fragment>