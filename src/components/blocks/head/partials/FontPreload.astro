---
// Font Preload Component
// ------------
// Description: A component to preload critical fonts
---

<Fragment>
  <!-- Preload critical fonts -->
  <link
    rel="preload"
    href="/@fontsource-variable/inter/files/inter-latin-wght-normal.woff2"
    as="font"
    type="font/woff2"
    crossorigin="anonymous"
  />
  <link
    rel="preload"
    href="/@fontsource-variable/outfit/files/outfit-latin-wght-normal.woff2"
    as="font"
    type="font/woff2"
    crossorigin="anonymous"
  />
  
  <!-- Font optimization styles -->
  <style>
    /* Optimize font loading with size-adjust and optional properties */
    @font-face {
      font-family: 'Inter Variable Fallback';
      font-style: normal;
      font-weight: 100 900;
      src: local('Arial');
      size-adjust: 105%;
      ascent-override: 90%;
      descent-override: 25%;
      line-gap-override: normal;
    }
    
    @font-face {
      font-family: 'Outfit Variable Fallback';
      font-style: normal;
      font-weight: 100 900;
      src: local('Arial');
      size-adjust: 107%;
      ascent-override: 92%;
      descent-override: 22%;
      line-gap-override: normal;
    }
  </style>
</Fragment>